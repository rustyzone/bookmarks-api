{
  "name": "bookmark-override",
  "version": "1.0.0",
  "private": true,
  "description": "A simple bookmark manager with Tailwind CSS",
  "author": "RustyZone",
  "scripts": {
    "tailwind:dev": "npx tailwindcss -i ./src/css/input.css -o ./src/css/styling.css --watch",
    "tailwind:build": "npx tailwindcss -i ./src/css/input.css -o ./src/css/styling.css --minify",
    "build": "npm run tailwind:build && rollup -c",
    "release": "cross-env NODE_ENV=production && npm run tailwind:build && rollup -c",
    "start": "npm run tailwind:dev | rollup -c -w",
    "test": "jest"
  },
  "dependencies": {
    "@rollup/plugin-replace": "^3.0.0",
    "@types/chrome": "^0.0.127",
    "@types/firefox-webext-browser": "^82.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "webextension-polyfill": "^0.7.0"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-typescript": "^8.1.0",
    "@types/jest": "^26.0.19",
    "@types/webextension-polyfill": "^0.9.1",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.16.0",
    "eslint-plugin-react": "^7.21.5",
    "jest": "^26.6.3",
    "jest-chrome": "^0.7.0",
    "rollup": "^2.56.3",
    "rollup-plugin-chrome-extension": "^3.6.1",
    "rollup-plugin-empty-dir": "^1.0.5",
    "rollup-plugin-zip": "^1.0.3",
    "tailwindcss": "^3.1.8",
    "ts-jest": "^26.4.4",
    "tslib": "^2.0.3",
    "typescript": "^4.1.3"
  }
}
